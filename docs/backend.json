{
  "entities": {
    "Conversation": {
      "title": "Conversation",
      "description": "Represents a query made by a user.",
      "type": "object",
      "properties": {
        "whatsappNumber": {
          "type": "string",
          "description": "The user's WhatsApp number."
        },
        "message": {
          "type": "string",
          "description": "The message/query from the user."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the conversation was created."
        }
      },
      "required": [
        "whatsappNumber",
        "message",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/conversations/{conversationId}": {
      "schema": {
        "$ref": "#/backend/entities/Conversation"
      },
      "description": "Stores user conversations/queries."
    }
  }
}
