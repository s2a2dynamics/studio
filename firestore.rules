rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public write for new conversations, but no one can read or update them.
    // This allows the server action to save queries.
    match /conversations/{conversationId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; // Only authenticated users can manage data
    }
  }
}
