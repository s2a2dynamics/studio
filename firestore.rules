rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public write for new conversations, but only authenticated users can read/update/delete.
    // This allows the server action from the public page to save queries.
    match /conversations/{conversationId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; 
    }
  }
}
