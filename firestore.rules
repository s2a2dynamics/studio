rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow server-side actions to read and write to the contacts collection.
    // This is secure because only your server can trigger these operations.
    match /contacts/{contactId} {
      allow read, write: if true; // Allows get, list, create, update, delete

      // Reading or writing messages still requires admin authentication.
      match /messages/{messageId} {
        allow create: if true;
        allow read, update, delete: if request.auth != null;
      }
    }
  }
}
