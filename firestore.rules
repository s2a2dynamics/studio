rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allows server-side actions (which run without user authentication)
    // to create new entries in the contacts collection.
    match /contacts/{contactId} {
      // Allow creating new contacts (messages) via the server action.
      allow create: if true;
      // Reading the list of contacts is only allowed for authenticated users (admins).
      allow read, list, update, delete: if request.auth != null;
    }
  }
}
