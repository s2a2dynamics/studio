rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Contacts can be created by anyone, but only viewed by authenticated admins.
    match /contacts/{contactId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;

      // Messages can be created by anyone (the server action), but only read by authenticated admins.
      match /messages/{messageId} {
        allow create: if true;
        allow read, update, delete: if request.auth != null;
      }
    }
  }
}
